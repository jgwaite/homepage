---
import Layout from '../layouts/Layout.astro';
import SectionHeading from '../components/SectionHeading.astro';
import ProjectCard from '../components/ProjectCard.astro';
import ContactCard from '../components/ContactCard.astro';
import projects from '../data/projects';
import siteInteractionsScript from '../scripts/siteInteractions.ts?url';
---

<Layout
	title="Joseph Waite"
	description="Joseph Waite pairs product leadership with hands-on software development to ship resilient products."
>
	<main class="min-h-[calc(100vh-4rem)] flex items-center justify-center px-6 py-16 md:py-24">
		<div class="w-full max-w-5xl space-y-16">
			<header class="space-y-6 text-center md:text-left">
				<h1 class="text-5xl md:text-6xl font-display font-semibold leading-tight">Joseph Waite</h1>
				<p class="text-2xl md:text-3xl font-display text-joseph-cream/90">
					Product Leadership &amp; Software Development
				</p>
				<p class="mx-auto max-w-3xl text-base text-joseph-cream/80 md:mx-0 md:text-lg">
					I connect the dots between product strategy and engineering execution, helping teams deliver modern, resilient experiences.
				</p>
			</header>

			<section class="space-y-8" aria-labelledby="projects-heading">
				<SectionHeading for="projects-heading" label="Featured Work" />
				<div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
					{projects.map((project) => (
						<ProjectCard {...project} />
					))}
				</div>
			</section>

			<section class="space-y-8" aria-labelledby="next-steps-heading">
				<SectionHeading for="next-steps-heading" label="Next steps" />
				<ContactCard
					scheduleHref="https://calendly.com/joseph-g-waite/30min"
					emailUser="joseph.g.waite"
					emailDomain="gmail.com"
					emailTag="homepage"
				/>
			</section>
			</div>
		</main>
</Layout>

<script type="module" src={siteInteractionsScript}></script>
